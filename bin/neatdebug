#!/usr/bin/env ruby
# TODO: This is hacked up so we can debug everything locally
# TODO: and to avoid loading the modules as gems.
# TODO: on my local machine. It is incredibly ugly, and will be
# TODO: removed later.

trap("SIGINT") { 
  puts "Gotcha!!!!"
  exit! 
}

%w{
../rubyneat/lib
../rubyneat_dashboard/lib
}.each do |dir|
  $:.unshift dir
end

NEAT_PATH = File.expand_path '..', File.dirname(__FILE__)
require_relative '../config/boot'

require 'rubyneat_dashboard'

NEAT::Cli::Main.start
